{{#link-to "home" classNames="item"}} Home {{/link-to}}
{{#link-to "doctrines" classNames="item"}} Doctrines {{/link-to}}
{{#link-to "fittings" classNames="item"}} Fittings {{/link-to}}

<div class="right compact menu">
  <div class="ui inline simple dropdown item">
    <div class="text">
      {{#each account.characters as |character|}}
        <img class="ui avatar image" src={{character-portrait id=character.characterId size=64}} />
      {{/each}}
    </div>

    <i class="dropdown icon"></i>

    <div class="menu">
      <a href="/api/auth/authorize?account={{account.id}}" class="item">Link another character</a>
      <div class="item" {{action logout}}>Log out</div>
    </div>
  </div>
</div>
