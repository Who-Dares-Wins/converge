<div class="ui menu secondary">
  <div class="header item">Show</div>

  <a class="active item">
    Active
  </a>

  <a class="item">
    Inactive
  </a>

  <div class="right menu">
    <div class="item">
      <div class="ui transparent icon input">
        <input placeholder="Search..." type="text">
        <i class="search link icon"></i>
      </div>
    </div>

    <div class="item">
      <button class="ui right labeled icon button green" {{action (route-action 'createDoctrine')}}>
        <i class="plus icon"></i>
        Doctrine
      </button>
    </div>
  </div>

</div>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Priority</th>
      <th>Name</th>
      <th>Description</th>
      <th>Fittings</th>
      {{#if isAdmin}}
        <th>Readiness</th>
      {{/if}}
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    {{#each model as |doctrine|}}
      <tr>
        <td>{{doctrine.priority}}</td>

        <td>{{doctrine.name}}</td>

        <td>{{doctrine.description}}</td>

        <td>{{doctrine.fittings.length}}</td>

        {{#if isAdmin}}
          <td class="warning"><i class="attention icon"></i> 50%</td>
        {{/if}}

        <td>
          {{#if doctrine.hasDirtyAttributes}}
            <button class="ui button small" {{action (route-action 'saveDoctrine' doctrine)}}>
              Save
            </button>
          {{/if}}

          {{#if doctrine.id}}
            <button class="ui button small negative" {{action (route-action 'deleteDoctrine' doctrine)}}>
              Delete
            </button>
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>

  <tfoot>
    <tr>
      <th colspan="6">
        <div class="ui right floated pagination menu">
          <a class="icon item">
            <i class="left chevron icon"></i>
          </a>
          <a class="item">1</a>
          <a class="item">2</a>
          <a class="item">3</a>
          <a class="item">4</a>
          <a class="icon item">
            <i class="right chevron icon"></i>
          </a>
        </div>
      </th>
    </tr>
  </tfoot>
</table>
